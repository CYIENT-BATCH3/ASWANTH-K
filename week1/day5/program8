program to convert the 2digit id into binary form


#include <stdio.h>
int main()
{
     int id;//declaring id
     printf("enter an id\n");
     scanf("%d",&id);//reading id
     id&(1<<7)?printf("1"):printf("0");//using bitwise AND and left shifting for printing the binary of the corresponding id
     id&(1<<6)?printf("1"):printf("0");//using bitwise AND and left shifting for printing the binary of the corresponding id
     id&(1<<5) ?printf("1"):printf("0");//using bitwise AND and left shifting for printing the binary of the corresponding id
     id&(1<<4)?printf("1"):printf("0");//using bitwise AND and left shifting for printing the binary of the corresponding id
     id&(1<<3)?printf("1"):printf("0");//using bitwise AND and left shifting for printing the binary of the corresponding id
     id&(1<<2)?printf("1"):printf("0");//using bitwise AND and left shifting for printing the binary of the corresponding id
     id&(1<<1)?printf("1"):printf("0");//using bitwise AND and left shifting for printing the binary of the corresponding id
     id&1?printf("1"):printf("0");//using bitwise AND and left shifting for printing the binary of the corresponding id
     return 0;
}
