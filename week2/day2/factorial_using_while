//program for printing factorial using while

#include<stdio.h>
 int main()
 {
     
      int num,fact=1,i=1;//declaring variables
      printf("enter a number\n");
      scanf("%d",&num);//reading num
      if(num>0)
      {
      while(i<=num)//checking if i less than or equal to num
       {
           fact=fact*i;
           i++;
       }
       printf("\nfactorial of the number is  == %d",fact);
 
      }
      else
      printf("factorial = 1");
  }

