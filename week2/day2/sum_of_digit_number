//finding sum of digit of a number
#include <stdio.h>

int main()
{
    int num,sum=0,digit;//declaring variable
    printf("enter a number");
    scanf("%d",&num);//reading num
    
    while(num>0)
     {
         digit = num % 10;//taking modulas for getting last digit
         sum = sum + digit;//finding sum of digit
         num=num/10;
     }
     printf("\nsum ====   %d",sum);
    return 0;
}
