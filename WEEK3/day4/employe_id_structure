//program for creating a structure and accessing the strucute
1.start
2.declare a structure
3.read elements by accessing the structure
4.printning the ouput

#include <stdio.h>
struct employe//defining structure
{
    int no;//declaring integer variable
    char name[30];//declaring string
};

int main()
{
    struct employe e1;//declaring structure variable
    printf("enter employee id & name\n");
    scanf("%d",&e1.no);//reading no by accessing structure 
    scanf("%s",e1.name);//reading employee name
  printf("employe id is =%d\n",e1.no);
    printf("name of the employe is %s",e1.name);//printning employe nme

    return 0;
}
